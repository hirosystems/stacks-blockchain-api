      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "clear": false
      }
    },
    {
      "label": "deploy:local-stacks-node-krypton",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/stacks-blockchain"
      },
      "command": "${workspaceFolder}/stacks-blockchain/run-local-stacks-node-krypton.sh",
      "isBackground": true,
      "problemMatcher": {
        "pattern":{
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": ".",
          // "endsPattern": "^.*Starting stacks-node.*$",
        }
      },
      "presentation": {
        "echo": true,

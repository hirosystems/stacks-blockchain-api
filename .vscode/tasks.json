  "version": "2.0.0",
  "tasks": [
    {
      "label": "generate:schemas",
      "type": "npm",
      "script": "generate:schemas",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "stacks-node:deploy-dev",
      "type": "shell",
      "command": "npm run devenv:deploy",
      "isBackground": true,
      "problemMatcher": {
        "pattern": { "regexp": ".", "file": 1, "location": 2, "message": 3, },
        "background": { "activeOnStart": true, "beginsPattern": ".", "endsPattern": "." }
      },
      "presentation": { "echo": true, "reveal": "always", "focus": false, "panel": "dedicated", "clear": false }
    },
    {
      "label": "deploy:local-stacks-node",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/stacks-blockchain"
      },
      "command": "${workspaceFolder}/stacks-blockchain/run-local-stacks-node.sh",
      "isBackground": true,
      "problemMatcher": {
        "pattern":{
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": ".",
          // "endsPattern": "^.*Starting stacks-node.*$",
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "label": "stop:local-stacks-node",
      "type": "shell",
      "command": "${workspaceFolder}/stacks-blockchain/run-local-stacks-node.sh kill",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "clear": false
      }
    },
    {
      "label": "deploy:local-stacks-node-helium",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/stacks-blockchain"
      },
      "command": "${workspaceFolder}/stacks-blockchain/run-local-stacks-node-helium.sh",
      "isBackground": true,
      "problemMatcher": {
        "pattern":{
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": ".",
          // "endsPattern": "^.*Starting stacks-node.*$",
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "label": "stop:local-stacks-node-helium",

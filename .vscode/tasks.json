        "clear": false
      }
    },
    {
      "label": "deploy:krypton",
      "type": "shell",
      "command": "docker-compose -f docker/docker-compose.dev.postgres.yml -f docker/docker-compose.dev.stacks-krypton-regtest.yml up",
      "isBackground": true,
      "problemMatcher": {
        "pattern":{
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": ".",
        }
      },
      "presentation": {
        "echo": true,

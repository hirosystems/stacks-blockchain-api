{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "TransactionEventStxLock",
  "description": "Only present in `smart_contract` and `contract_call` tx types.",
  "allOf": [
    {
      "$ref": "./abstract-transaction-event.schema.json"
    },
    {
      "type": "object",
      "required": ["event_type", "stx_lock_event"],
      "properties": {
        "event_type": {
          "type": "string",
          "enum": ["stx_lock"]
        },
        "stx_lock_event": {
          "type": "object",
          "additionalProperties": false,
          "required": ["locked_amount", "unlock_height", "locked_address"],
          "properties": {
            "locked_amount": {
              "type": "string"
            },
            "unlock_height": {
              "type": "integer"
            },
            "locked_address": {
              "type": "string"
            }
          }
        }
      }
    }
  ]
}

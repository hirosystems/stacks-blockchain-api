    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^10.0.0",
    "@stacks/eslint-config": "^1.0.7",
    "@stacks/prettier-config": "0.0.7",
    "@types/ajv": "^1.0.0",
    "@types/bluebird": "^3.5.30",
    "@types/bn.js": "^4.11.6",
    "@types/cors": "^2.8.6",

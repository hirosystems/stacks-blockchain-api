{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["lib", "node_modules", "tests/**"]
}

{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "outDir": "lib",
    "sourceMap": true,
    "sourceRoot": ".",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
  },
  "include": [
    "src/**/*",
    "migrations/**/*",
    "tests/**/*"
  ]
}

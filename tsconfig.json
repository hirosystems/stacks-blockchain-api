{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "noEmit": true,
    "baseUrl": ".",
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["lib", "node_modules"]
}

{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@stacks/stacks-blockchain-api-types": ["../docs"]
    }
  },
  "include": ["./src/**/*.ts", "../src/@types/pg-cursor/*.ts"],
  "exclude": ["lib", "node_modules"]
}
